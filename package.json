{
	"name": "phils-helper-methods",
	"displayName": "Phils Helper Methods",
	"description": "My custom code snippets",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.102.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:my-dev-tools.helloWorld"
	],
	"main": "./out/extension.js",
	"configuration": {
		"title": "My Dev Tools Configuration",
		"properties": {
			"myDevTools.folderWatchPattern": {
				"type": "string",
				"default": "^src/components",
				"description": "A regex pattern for folders to monitor for automatic file scaffolding. Relative to workspace root."
			}
		}
	},
	"contributes": {
		"snippets": [
			{
				"language": "typescript",
				"path": "./snippets/typescript.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.102.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.25.1",
		"typescript": "^5.8.3",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2"
	}
}
